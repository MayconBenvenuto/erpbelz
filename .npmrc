# Configurações PNPM para o Projeto ERP Belz

# Performance e cache
store-dir=~/.pnpm-store
prefer-offline=true

# Strict mode para garantir qualidade
strict-peer-dependencies=false
auto-install-peers=true

# Resolução de dependências
resolution-mode=highest

# Logging
loglevel=warn

# Save exact versions
save-exact=false
save-prefix="^"

# Lockfile
lockfile=true

# Node modules layout - Hoisted para compatibilidade com Next.js standalone no Windows/OneDrive
# O PNPM usa symlinks que podem falhar com EPERM em OneDrive/Windows
node-linker=hoisted

# Hoisting (habilitado para Next.js standalone)
shamefully-hoist=true

# Engine strict
engine-strict=true
